{
  "name": "gaggimate-notion-bridge",
  "version": "1.0.0",
  "description": "Bridge service between GaggiMate espresso machine and Notion for persistent shot logging and profile management",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "gaggimate",
    "espresso",
    "coffee",
    "notion"
  ],
  "author": "Colt Bradley",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/coltbradley/gaggimate-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.0",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
