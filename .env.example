# GaggiMate Notion Bridge â€” environment template
# Copy to .env and fill in your values. Never commit .env.
#
# GaggiMate connection
GAGGIMATE_HOST=192.168.1.100
GAGGIMATE_PROTOCOL=ws
REQUEST_TIMEOUT=5000

# Notion API
NOTION_API_KEY=ntn_XXXX
NOTION_BEANS_DB_ID=
NOTION_BREWS_DB_ID=
NOTION_PROFILES_DB_ID=

# Notion webhook verification token (optional)
WEBHOOK_SECRET=

# Sync settings
SYNC_INTERVAL_MS=30000
PROFILE_RECONCILE_ENABLED=true
PROFILE_RECONCILE_INTERVAL_MS=30000
# Kill-switch for archived -> delete behavior
PROFILE_RECONCILE_DELETE_ENABLED=true
# Safety guard: max archived profile deletes per reconcile cycle
PROFILE_RECONCILE_DELETE_LIMIT_PER_RUN=3
RECENT_SHOT_LOOKBACK_COUNT=5

# HTTP server
HTTP_PORT=3000

# Data directory (for sync state persistence)
DATA_DIR=./data

# Brew title formatting timezone (e.g. America/Los_Angeles)
BREW_TITLE_TIMEZONE=America/Los_Angeles
